@model Profession
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Meslek Güncelle";
}

<div class="row">
    <div class="col-lg-8">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Proffesion", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Adresi</label>
                        @Html.TextBoxFor(x => x.ProfessionName, new { @class = "form-control", placeholder = "Meslek yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Proffesion", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>


