@model ParticipantHandbook
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Katılımcı El Kitabı Bilgileri Ekleme Sayfası";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Add", "ParticipantHandbook", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Gönderim Tarihi</label>
                        @Html.TextBoxFor(x => x.ShippingDate, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Çalışanı Seç</label>
                        @Html.DropDownList("EmployeeId", (SelectList)ViewBag.Employee, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Teslim Tarihi</label>
                        @Html.TextBoxFor(x => x.DeliveryDate, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Firma Seç</label>
                        @Html.DropDownList("FairId", (SelectList)ViewBag.Fair, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Seç</label>
                        @Html.DropDownList("CompanyId", (SelectList)ViewBag.Company, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "ParticipantHandbook", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

