@model List<Fair>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Fuarlar</h1>
            </div>

        </div>
    </div>
</div>

<div class="container container-int">

    <ol class="breadcrumb">
        <li><a href="/Home/Index">Anasayfa</a></li>
        <li class="active">Portfolio</li>
    </ol>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-7 col-sm-7">
                <a href="/Fair/Detay/@item.ID"><img class="img-responsive" src="@item.ImagePat" style="width:700px;height:450px" alt="Portfolio 1"></a><br />
            </div><br />

            <div class="col-md-5 col-sm-5">
                <h3>@item.FairName</h3>
                <h4>@item.StartDate.ToString("M")-@item.FinishDate.ToString("M")</h4>
                <p>@item.Address</p>
                <a class="btn btn-primary" href="/Fair/Detay/@item.ID">Detayini Gor<i class="fa fa-angle-right"></i></a>
            </div>
           
        }
        <br />
    </div>

</div>
