@model Employee
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Adı-Soyadı</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", placeholder = "Adınız ve soyadınızı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Unvanı</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Ünvanı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Telefonu</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefonunu yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Departman Adı</label>
                        @Html.TextBoxFor(x => x.DepartmanName, new { @class = "form-control", placeholder = "Departman adını yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Employee", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

