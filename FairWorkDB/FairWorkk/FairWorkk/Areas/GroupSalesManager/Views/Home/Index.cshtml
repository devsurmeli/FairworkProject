@model List<SalesPerson>
@{
    ViewBag.Title = "Index";
    TempData["Title"] = "Ya bir yol açın, ya bir yol bulun, ya da yoldan çekilin.";
}

<div class="row">
    <div class="col-lg-12">
        <h4 style="color:red">Satış Personel Listesi</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th >Sicil No.ID</th>
                    <th >İlgilendiği Fuar</th>
                    <th>Adı-Soyadı</th>
                    <th>Telefonu</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Fair.FairName</td>
                        <td>@item.FullName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.ActionLink("Detay","Detay",new {id=item.ID },new {@class="btn btn-danger" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

