@model List<FreeArea>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ReferencesManager/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Diğer Hizmetler Fiyat Bilgisi</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:auto">Sıra No</th>
                                    <th style="width:auto">İhtiyacın Adı</th>
                                    <th style="width:auto">İhtiyacın Kullanım Miktarı ve Ücreti</th>
                                    <th style="width:auto">İhtiyacın Kullanım Ücreti</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1.</td>
                                    <td>Elektrik</td>
                                    <td>
                                        0  -100 KW <br />
                                        100-200 KW  <br />
                                        200-300 KW  <br />
                                        300-+++ KW <br />
                                    </td>
                                    <td>
                                        100 $<br />
                                        150 $<br />
                                        200 $<br />
                                        250 $<br />
                                    </td>
                                </tr>
                                <tr>
                                    <td>2.</td>
                                    <td>Su</td>
                                    <td>
                                        0  -100 LT <br />
                                        100-200 LT  <br />
                                        200-300 LT  <br />
                                        300-+++ LT <br />
                                    </td>
                                    <td>
                                        10 $<br />
                                        15 $<br />
                                        20 $<br />
                                        25 $<br />
                                    </td>
                                </tr>
                                <tr>
                                    <td>3.</td>
                                    <td>Atık Su</td>
                                    <td>
                                        0  -100 WLT <br />
                                        100-200 WLT  <br />
                                        200-300 WLT  <br />
                                        300-+++ WLT <br />
                                    </td>
                                    <td>
                                        150 $<br />
                                        300 $<br />
                                        450 $<br />
                                        600 $<br />
                                    </td>
                                </tr>
                                <tr>
                                    <td>4.</td>
                                    <td>Basınçlı Hava</td>
                                    <td>
                                        0  -100 DB <br />
                                        100-200 DB  <br />
                                        200-300 DB  <br />
                                        300-+++ DB <br />
                                    </td>
                                    <td>
                                        150 $<br />
                                        250 $<br />
                                        300 $<br />
                                        350 $<br />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Diğer Hizmet Bilgileri(Boş Alan Seçimi Yapılmış Olanlar)</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:auto">ID</th>
                                    <th style="width:auto">Katılımcı Firma </th>
                                    <th style="width:auto">Sözleşme</th>
                                    <th style="width:auto">Elektrik İhtiyaçı Var mı?</th>
                                    <th style="width:auto">Kaç KW İhtiyaçı Var?</th>
                                    <th style="width:auto">KW Ücreti</th>
                                    <th style="width:auto">Su İhtiyaçı Var mı?</th>
                                    <th style="width:auto">Kaç LT İhtiyaçı Var?</th>
                                    <th style="width:auto">LT Ücreti</th>
                                    <th style="width:auto">Atık Su İhtiyaçı Var mı?</th>
                                    <th style="width:auto">Kaç WLT İhtiyaçı Var?</th>
                                    <th style="width:auto">WLT Ücreti</th>
                                    <th style="width:auto">Basınçlı Hava İhtiyaçı Var mı?</th>
                                    <th style="width:auto">Kaç DB İhtiyaçı Var?</th>
                                    <th style="width:auto">DB Ücreti</th>
                                    <th style="width:auto">Toplamı</th>
                                    <th style="width:auto"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>
                                            ID = @item.CompanyId<br />
                                            Firma Adı = @item.Company.CompanyName
                                        </td>
                                        <td>
                                            ID = @item.ContractId
                                        </td>
                                        <td>@item.Electric</td>
                                        <td>@item.KWNeed</td>
                                        <td>@item.KWPrice</td>
                                        <td>@item.Water</td>
                                        <td>@item.LTNeed</td>
                                        <td>@item.LTPrice</td>
                                        <td>@item.WasteWater</td>
                                        <td>@item.WLTNeed</td>
                                        <td>@item.WLTPrice</td>
                                        <td>@item.CompressedAir</td>
                                        <td>@item.AirNeed</td>
                                        <td>@item.AirPrice</td>
                                        <td>@item.TotalPrice</td>
                                        <td>
                                            @Html.ActionLink("Detay", "Detay", new { id = item.ID }, new { @class = "btn btn-secondary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>
                    </div>
                    <footer class="form-group">
                        <center>
                            <h5> Toplam Diğer Hizmetler Adeti = <span style="color:red">@Model.Count()</span></h5>
                            <h5> Diğer Hizmetler Toplamı = <span style="color:red">@Model.Sum(x => x.TotalPrice)$</span></h5>
                        </center>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</section>

