@model Fair
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Fuar Güncelleme";
}

<div class="row">
    <div class="col-lg-5">
        <div class="panel">
            <div class="panel-body">

                @using (Html.BeginForm("Update","Fair",FormMethod.Post,new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(x=>x.ID)

                    <div class="form-group">
                        <label>Fuar Adı</label>
                        @Html.TextBoxFor(x => x.FairName, new { @class = "form-control", placeholder = "Fuar adını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Başlama Tarihi</label>
                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                        @Html.TextBoxFor(x => x.FinishDate, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Adresi</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Fuar adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Salon Seç</label>
                        @Html.DropDownList("SaloonId", (SelectList)ViewBag.Saloon, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Fuar Resmi</label>
                        <input type="file" name="FuarResmi" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Fair", null, new { @class = "btn btn-secondary" })
                    </div>
                }

            </div>
        </div>
    </div>
</div>

