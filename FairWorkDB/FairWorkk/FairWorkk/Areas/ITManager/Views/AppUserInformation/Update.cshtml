@model AppUserInformation
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x=>x.ID)

                    <div class="form-group">
                        <label>ADı-Soyadı</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", placeholder = "Adını soyadını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Telefonu</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon numarasını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Email Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Cinsiyeti</label>
                        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control", placeholder = "Cinsiyetini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Kullanıcı Adını Seçin</label>
                        @Html.DropDownList("AppUserId", (SelectList)ViewBag.AppUser, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Kullanıcı Rolunu Seçin</label>
                        @Html.DropDownList("RoleId", (SelectList)ViewBag.Role, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "AppUserInformation", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

