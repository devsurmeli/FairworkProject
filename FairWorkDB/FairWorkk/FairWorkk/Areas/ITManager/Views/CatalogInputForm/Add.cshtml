@model CatalogInputForm
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] ="Katalog Giriş Formu Ekleme Sayfası";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Firma Seç</label>
                        @Html.DropDownList("CompanyId", (SelectList)ViewBag.Company, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Ürün Grupları Seç</label>
                        @Html.DropDownList("ProductGroupId", (SelectList)ViewBag.ProductGroup, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Profili Seç</label>
                        @Html.DropDownList("CompanyProfileId", (SelectList)ViewBag.CompanyProfile, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "CatalogInputForm", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
