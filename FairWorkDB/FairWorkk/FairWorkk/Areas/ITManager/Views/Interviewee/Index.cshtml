@model List<Interviewee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Ttile"] = "Görüşülen Kişi Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-dark">
            <div class="card-header">
                <center><h3>Satis Personelini Görüsme Yapcak Kişi Listesi </h3></center>

            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:auto">ID</th>
                            <th style="width:auto">Firma Bilgileri</th>
                            <th style="width:auto">Adı-Soyadı</th>
                            <th style="width:auto">Ünvanı</th>
                            <th style="width:auto">Telefonu</th>
                            <th style="width:auto">Email Adresi</th>
                            <th style="width:auto">Görüşüldü Mü?</th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>
                                    Firma ID: @item.Company.ID<br />
                                    Firma Adı: @item.Company.CompanyName<br />
                                    Firma Yetkilisi : @item.Company.CompanyOfficial<br />
                                    Telefonu: @item.Company.Phone<br />
                                    Email: @item.Company.Email<br />
                                    Adresi: @item.Company.Address<br />
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Title</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.IsInterviewee == false)
                                    {
                                    <h4 style="color:red">@item.IsInterviewee</h4>
                                    }
                                    else
                                    {
                                        @item.IsInterviewee
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Ayrıntılı Görüntüle", "Detail", new { id = item.ID }, new { @class = "btn btn-info" })<br />
                                    @Html.ActionLink("Yeni Görüşme Ekle", "Add", "Interviewee", null, new { @class = "btn btn-success" })<br />
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-warning" })<br />
                                    @Html.ActionLink("Görüşmeyi Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
