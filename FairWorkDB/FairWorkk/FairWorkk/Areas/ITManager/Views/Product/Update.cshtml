@model Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Mevcut Ürünü Güncelleme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Product", FormMethod.Post))
                {
                    @Html.HiddenFor(x=>x.ID)
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Ürün Adını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>ürün Fiyatı</label>
                        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control", placeholder = "Ürün fiyatı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Ürün Özellikleri</label>
                        @Html.TextBoxFor(x => x.Features, new { @class = "form-control", placeholder = "Ürün özelliklerini yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Product", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

