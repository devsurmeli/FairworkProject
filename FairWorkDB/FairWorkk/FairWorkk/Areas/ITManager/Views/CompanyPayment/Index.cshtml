@model List<CompanyContractPayment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Katılımcı Firma Sözleşme Borç ve Ödeme Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Sözleşmenin Borç Defteri Bilgileri</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:auto">ID</th>
                            <th style="width:auto">Sözleşme </th>
                            <th style="width:auto">Katılımcı Firma</th>
                            <th style="width:auto">Fuar</th>
                            <th style="width:auto">Toplam</th>
                            <th style="width:auto">Ödediği Tutar</th>
                            <th style="width:auto">Kalan Tutar</th>
                            <th style="width:auto">Dolar Fiyatı</th>
                            <th style="width:auto">Euro Fiyatı</th>
                            <th style="width:auto">TL Fiyatı</th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.ContractId </td>
                                <td>
                                    ID = @item.CompanyId<br />
                                    Firma Adı = @item.Company.CompanyName
                                </td>
                                <td>
                                    ID = @item.FairId<br />
                                    Fuar Adı = @item.Fair.FairName
                                </td>
                                <td>@item.TotalPrice</td>
                                <td>@item.AmountPaid</td>
                                <td>@item.AmountNotPaid</td>
                                <td>@item.DollarPrice</td>
                                <td>@item.EuroPrice</td>
                                <td>@item.TurkıshLira</td>
                                <td>
                                    @Html.ActionLink("Detay", "Detail", new { id = item.ID }, new { @class = "btn btn-dark" })<br />
                                    @Html.ActionLink("Ekle", "Add", "CompanyPayment", null, new { @class = "btn btn-secondary" })<br />
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-dark" })<br />
                                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-secondary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
