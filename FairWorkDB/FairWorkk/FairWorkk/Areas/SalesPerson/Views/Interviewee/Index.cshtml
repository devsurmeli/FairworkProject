@model List<Interviewee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SalesPerson/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Görüşülmeyen Kişilerle Görüş";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Görüşülecek Kişi Bilgileri</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: auto">ID</th>
                            <th style="width: auto">Firma Adı</th>
                            <th style="width: auto">Adı-Soyadı</th>
                            <th style="width: auto">Ünvani</th>
                            <th style="width: auto">Telefon</th>
                            <th style="width: auto">E-Mail Adresi</th>
                            <th style="width: auto">Görüşüldü Mü?</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Company.CompanyName</td>
                                <td>@item.FullName</td>
                                <td>@item.Title</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.IsInterviewee == false)
                                    {
                                        <h5 style="color:red">@item.IsInterviewee</h5>
                                    }
                                    else
                                    {
                                        @item.IsInterviewee
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Görüşülecek Kişi Ekle", "Ekle", "Interviewee", null, new { @class = "btn btn-secondary" })
                                    <br />
                                    @Html.ActionLink("Güncelle", "Güncelle", new { id = item.ID }, new { @class = "btn btn-warning" })
                                    <br />
                                    @Html.ActionLink("Detay", "Detay", new { id = item.ID }, new { @class = "btn btn-dark" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

