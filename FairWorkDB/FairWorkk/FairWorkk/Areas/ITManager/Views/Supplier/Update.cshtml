@model Supplier
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Tedarikçi Bilgilerini Güncelleme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Supplier", FormMethod.Post))
                {
                    @Html.HiddenFor(x=>x.ID)
                    <div class="form-group">
                        <label>Firma Adı</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", placeholder = "Firma adını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Adı</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Adını yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Soyadı</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyadı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Adresi</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Telefonu</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Email Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email adresini yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Supplier", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

