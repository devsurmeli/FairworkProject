@model List<FreeArea>
@{
    ViewBag.Title = "Detay";
    Layout = "~/Areas/ReferencesManager/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-12">
            <center>
                <h5>Sıra ID = <span style="color:red">@item.ID</span></h5><br />
                <h5 style="color:cornflowerblue">Katılımcı Firma Bilgileri</h5>
                <label>
                    Firma ID = <span style="color:red">@item.CompanyId</span><br />
                    Firma Adı = <span style="color:red">@item.Company.CompanyName</span><br />
                    Firma Yetkilisi = <span style="color:red">@item.Company.CompanyOfficial</span><br />
                    Firma Unvani = <span style="color:red">@item.Company.Title</span><br />
                    Firma Telefonu = <span style="color:red">@item.Company.Phone</span><br />
                    Firma Dahili = <span style="color:red">@item.Company.Intercom</span><br />
                    Firma Email Adresi = <span style="color:red">@item.Company.Email</span><br />
                    Firma Fax = <span style="color:red">@item.Company.Fax</span><br />
                    Firma Adresi = <span style="color:red">@item.Company.Address</span><br />
                </label>
                <h5 style="color:cornflowerblue">Sözleşme Bilgileri</h5>
                <label>
                    Sözleşme ID = <span style="color:red">@item.ContractId</span><br />
                    Sözleşme Tarihi = <span style="color:red">@item.Contract.ContractDate.ToString("d")</span><br />
                    Sözleşme Tipi = <span style="color:red">@item.Contract.ContractType.TypeName</span><br />
                    Stand Tipi = <span style="color:red">@item.Contract.StandType.TypeName</span><br />
                    Stand Alanı = <span style="color:red">@item.Contract.Stand.Area</span><br />
                    M2 Birim Fiyat = <span style="color:red">@item.Contract.SquarePrice</span><br />
                    Döviz Cinsi = <span style="color:red">@item.Contract.Currency.CurrencyName</span><br />
                    Döviz Kuru = <span style="color:red">@item.Contract.EcxhangeRate</span><br />
                    İndirim Oranı = <span style="color:red">@item.Contract.DiscountRate</span><br />
                    Vade Sayısı = <span style="color:red">@item.Contract.MaturityNumber</span><br />
                    Ödeme Planı = <span style="color:red">@item.Contract.PaymentPlan</span><br />
                    Toplam Fiyatı = <span style="color:red">@item.Contract.TotalPrice</span><br />
                    Sözleşme Son Gecerlilik Tarihi = <span style="color:red">@item.Contract.ContractDeadline.ToString("d")</span><br />
                    İmzalı mı? = <span style="color:red">@item.Contract.ContractSigned</span><br />
                </label>
                <h5 style="color:cornflowerblue">Elektrik İhtiyacı Var Mı? = <span style="color:red">@item.Electric</span></h5><br />
                <h5 style="color:cornflowerblue">Kaç KW İhtiyacı Var Mı? = <span style="color:red">@item.KWNeed</span></h5><br />
                <h5 style="color:cornflowerblue">KW Ücreti? = <span style="color:red">@item.KWPrice</span></h5><br />
                <h5 style="color:cornflowerblue">Su İhtiyacı Var Mı? = <span style="color:red">@item.Water</span></h5><br />
                <h5 style="color:cornflowerblue">Kaç LT İhtiyacı Var Mı? = <span style="color:red">@item.LTNeed</span></h5><br />
                <h5 style="color:cornflowerblue">LT Ücreti? = <span style="color:red">@item.LTPrice</span></h5><br />
                <h5 style="color:cornflowerblue">Atık Su İhtiyacı Var Mı? = <span style="color:red">@item.WasteWater</span></h5><br />
                <h5 style="color:cornflowerblue">Kaç WLT İhtiyacı Var Mı? = <span style="color:red">@item.WLTNeed</span></h5><br />
                <h5 style="color:cornflowerblue">WLT Ücreti? = <span style="color:red">@item.WLTPrice</span></h5><br />
                <h5 style="color:cornflowerblue">Basınçlı Hava İhtiyacı Var Mı? = <span style="color:red">@item.CompressedAir</span></h5><br />
                <h5 style="color:cornflowerblue">Kaç DB İhtiyacı Var Mı? = <span style="color:red">@item.AirNeed</span></h5><br />
                <h5 style="color:cornflowerblue">KW Ücreti? = <span style="color:red">@item.AirPrice</span></h5><br />
                <h5 style="color:cornflowerblue">Toplam = <span style="color:red">@item.TotalPrice$</span></h5><br />
                @Html.ActionLink("Geri Dön", "Index", "FreeArea", new { @class = "btn btn-lg btn-dark" })
            </center>
        </div>
    }
</div>
