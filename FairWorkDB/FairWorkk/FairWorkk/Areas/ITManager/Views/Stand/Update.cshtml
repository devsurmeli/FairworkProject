@model Stand
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Stand Güncelleme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Stand", FormMethod.Post))
                {
                    @Html.HiddenFor(x=>x.ID)
                    <div class="form-group">
                        <label>Stand Kodu</label>
                        @Html.TextBoxFor(x => x.Code, new { @class = "form-control", placeholder = "Stand Kodunu yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Genişliği</label>
                        @Html.TextBoxFor(x => x.Width, new { @class = "form-control", placeholder = "Stand Genişliği yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Uzunluğu</label>
                        @Html.TextBoxFor(x => x.Height, new { @class = "form-control", placeholder = "Stand  yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Alanı</label>
                        @Html.TextBoxFor(x => x.Area, new { @class = "form-control", placeholder = "Stand alanı  yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Salonu Seçin</label>
                        @Html.DropDownList("SaloonId", (SelectList)ViewBag.Saloon, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Stand", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

