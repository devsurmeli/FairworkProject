@model Sector
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Sektör Güncelleme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Sector", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Sektör Adı</label>
                        @Html.TextBoxFor(x => x.SectorAdı, new { @class = "form-control", placeholder = "Sector adı yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Sector", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

