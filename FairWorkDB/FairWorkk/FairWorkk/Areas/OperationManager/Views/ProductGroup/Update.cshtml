@model ProductGroup
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/OperationManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Ürün Grupları Güncelleme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "ProductGroup", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        <label>Ürün Kodu</label>
                        @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control", placeholder = "ürün Kodunu yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Ürünü Seç</label>
                        @Html.DropDownList("ProductId", (SelectList)ViewBag.Product, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "ProductGroup", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

