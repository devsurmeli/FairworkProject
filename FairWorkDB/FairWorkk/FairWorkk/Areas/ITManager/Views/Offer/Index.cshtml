@model List<Offer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Görüşme Bilgi Listesi";
}

<div class="row">
    <div class="col-12">
        <div class="card card-gray-dark">
            <div class="card-header">
                <h3 class="card-title">Teklif Bilgileri</h3>
            </div>
            <div class="card-body ">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:auto">ID</th>
                            <th style="width:auto">Teklif Tarihi</th>
                            <th style="width:auto">Salonu</th>
                            <th style="width:auto">Stand Kodu</th>
                            <th style="width:auto">Teklif Verilen M2</th>
                            <th style="width:auto">M2 Birim Fiyatı</th>
                            <th style="width:auto">Döviz Cinsi</th>
                            <th style="width:auto">Döviz Kuru</th>
                            <th style="width:auto">Vade Sayısı</th>
                            <th style="width:auto">Ödeme Planı</th>
                            <th style="width:auto">Teklifin Son Geçerlilik Tarihi</th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.OfferDate.ToString("d")</td>
                                <td>@item.Saloon.SalonName</td>
                                <td>@item.Stand.Code</td>
                                <td>@item.OfferSquare</td>
                                <td>@item.SquarePrice</td>
                                <td>@item.Currency.CurrencyName</td>
                                <td>@item.ExchangeRate</td>
                                <td>@item.MaturityNumber</td>
                                <td>@item.PaymentPlan</td>
                                <td>@item.OfferDeadline.ToString("d")</td>
                                <td>
                                    @Html.ActionLink("Detay", "Detail", new { id = item.ID }, new { @class = "btn btn-success" })<br />
                                    @Html.ActionLink("Ekle", "Add", "Offer", null, new { @class = "btn btn-info" })<br />
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-warning" })<br />
                                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

