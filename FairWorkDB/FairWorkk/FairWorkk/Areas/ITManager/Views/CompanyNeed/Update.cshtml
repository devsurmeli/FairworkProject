@model CompanyNeed
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Katılımcı Firma İhtiyaclarını Güncelleme Sayfası";
}

<div class="row">
    <div class="col-lg-12">
        <h3>Katilimci Firma İhtiyaç Ekleme Formu</h3>
        <br />
        @using (Html.BeginForm())
        {

            @Html.HiddenFor(x=>x.ID)

            <div class="form-group">
                <label>Firma Adı</label>
                @Html.DropDownList("CompanyId", (SelectList)ViewBag.Company, "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Davetiye Sayısı</label>
                @Html.TextBoxFor(x => x.InvitationNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Poster Sayısı</label>
                @Html.TextBoxFor(x => x.PosterNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Personel Giriş Kart Sayısı</label>
                @Html.TextBoxFor(x => x.PersonelEntryCardNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Personel Otopark Giriş Kart Sayısı</label>
                @Html.TextBoxFor(x => x.StaffParkingEntryCardNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-dark">Kaydet</button>
                @Html.ActionLink("Geri Dön", "Index", "CompanyNeed", null, new { @class = "btn btn-dark" })
            </div>
        }
    </div>
</div>

