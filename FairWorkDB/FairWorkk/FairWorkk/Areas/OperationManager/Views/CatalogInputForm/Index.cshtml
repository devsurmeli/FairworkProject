@model List<CatalogInputForm>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/OperationManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Katalog Giriş Formu Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-dark">
            <div class="card-header">
                <h3 class="card-title">Katalog Giriş Formu</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: auto">ID</th>
                            <th style="width: auto">Firma Adı</th>
                            <th style="width: auto">Adresi</th>
                            <th style="width: auto">Telefonu</th>
                            <th style="width: auto">E-Posta</th>
                            <th style="width: auto">Faks</th>
                            <th style="width: auto">Ürün Grupları</th>
                            <th style="width: auto">Firma Tipi</th>
                            <th style="width: auto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Company.CompanyName</td>
                                <td>@item.Company.Address</td>
                                <td>@item.Company.Phone</td>
                                <td>@item.Company.Email</td>
                                <td>@item.Company.Fax</td>
                                <td>@item.ProductGroup.ProductCode <br />Karşılık Gelen Ürün: @item.ProductGroup.Product.ProductName <br /> Fiyatı:$@item.ProductGroup.Product.ProductPrice </td>
                                <td>@item.CompanyProfile.ProfileName</td>
                                <td>
                                    @Html.ActionLink("Detay", "Detay", new { id = item.ID }, new { @class = "btn btn-dark" })<br />
                                    @Html.ActionLink("Ekle", "Add", "CatalogInputForm", null, new { @class = "btn btn-secondary" })<br />
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-dark" })<br />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

