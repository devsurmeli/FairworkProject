@model Company
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="section-header">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <h1 class="page-header">Katilimci Firma</h1>
                </div>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-12">
                <ol class="breadcrumb">
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li class="active">Katilimci Firma</li>
                </ol>
                <h3>Katilimci Firma Kayit Ekleme Formu</h3>
                <br />
                @using (Html.BeginForm("Add", "Company", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Firma Adı</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi</label>
                        @Html.TextBoxFor(x => x.CompanyOfficial, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi Unvani</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi Telefonu</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi Dahili</label>
                        @Html.TextBoxFor(x => x.Intercom, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi Email Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Yetkilisi Fax Telefonu</label>
                        @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Adresi</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Bulunduğu Şehir</label>
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma Bulunduğu Ülke</label>
                        @Html.DropDownList("CountryId", (SelectList)ViewBag.Country, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firmanın Sektörü</label>
                        @Html.DropDownList("SectorId", (SelectList)ViewBag.Sector, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Katılmak İstediğiniz Fuar</label>
                        @Html.DropDownList("FairId", (SelectList)ViewBag.Fair, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn  btn-primary pull-right">Katilim Talebini Gönder</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


