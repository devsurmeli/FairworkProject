@model Guest
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/BoxOfficeAttendant/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Ziyaretçi Oluşturma ve Ekleme Sayfası";
}

<div class="row">
    <div class="col-lg-8">
        <div class="panel">
            <div class="panel-heading">
                <h5>Ziyaretçi Ekle</h5>
            </div>
            <br />
            <div class="panel-body">
                @using (Html.BeginForm("Add", "Guest", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Çalıştığınız Firma Adı</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Adınız</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Soyadınız</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Telefon Numaranız</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Adresiniz</label>
                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Mesleğiniz</label>
                        @Html.DropDownList("ProfessionId", (SelectList)ViewBag.Profession, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Katılmak İstediğiniz Fuar Süresi</label>
                        @Html.DropDownList("TicketTypeId", (SelectList)ViewBag.TicketType, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Katılmak İstediğiniz Fuar</label>
                        @Html.DropDownList("FairId", (SelectList)ViewBag.Fair, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Olusturulan Qr Kodun Resmi Kodu</label>
                        @Html.TextBoxFor(x => x.QrCodeImage, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn  btn-dark pull-right">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Guest", null, new { @class = "btn btn-danger" })
                    </div>


                }
            </div>
        </div>
    </div>
</div>
