@model Guest
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="section-header">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <h1 class="page-header">Ziyaretci</h1>
                </div>
                
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="form-group col-md-12">
                <ol class="breadcrumb">
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li class="active">Ziyaretçi</li>
                </ol>
                <h3>Ziyaretçi Fuar Giriş Formu</h3>
                <br />
                @using (Html.BeginForm("Add", "Guest", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Çalıştığınız Firma Adı</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Adınız</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Soyadınız</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Telefon Numaranız</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Adresiniz</label>
                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Mesleğiniz</label>
                        @Html.DropDownList("ProfessionId", (SelectList)ViewBag.Profession, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Katılmak İstediğiniz Fuar Süresi</label>
                        @Html.DropDownList("TicketTypeId", (SelectList)ViewBag.TicketType, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Katılmak İstediğiniz Fuar</label>
                        @Html.DropDownList("FairId", (SelectList)ViewBag.Fair, "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn  btn-primary pull-right">Ziyaretçi Katilim Talebini Gönder</button>
                    </div>

                }
            </div>
        </div>
    </div>
</section>


