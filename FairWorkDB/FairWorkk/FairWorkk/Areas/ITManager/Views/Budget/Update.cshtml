@model BudgetAndCurrentSale
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Update", "Budget", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Sözleşme Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", placeholder = "Sözleşme toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>İlave Stand Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.AdditionalStandTotal, new { @class = "form-control", placeholder = "İlave stand toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Diğer Hizmetler Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.OtherTotal, new { @class = "form-control", placeholder = "Diğer hizmetler toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Yurtdısı Ofislerin Komısyon Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.ComisyonTotal, new { @class = "form-control", placeholder = "Yurtdısı komısyon toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>KDV Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.KDVTotal, new { @class = "form-control", placeholder = "KDV toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Kurum Vergisi Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.CorporateTaxTotal, new { @class = "form-control", placeholder = "Kurum vergisi toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Yedek Akçe Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.ReserveFundTotal, new { @class = "form-control", placeholder = "Yedek akçe toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.Total, new { @class = "form-control", placeholder = "Toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Dolar Kuru</label>
                        @Html.TextBoxFor(x => x.DollarExchangeRate, new { @class = "form-control", placeholder = "Dolar kuru tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Toplam Dolar Tutarı</label>
                        @Html.TextBoxFor(x => x.DollarTotal, new { @class = "form-control", placeholder = "Dolar tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Euro Kuru</label>
                        @Html.TextBoxFor(x => x.EuroExchangeRate, new { @class = "form-control", placeholder = "Euro kuru tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>Euro Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.EuroTotal, new { @class = "form-control", placeholder = "Euro toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <label>TL Toplam Tutarı</label>
                        @Html.TextBoxFor(x => x.TurkıshLiraTotal, new { @class = "form-control", placeholder = "TL toplam tutarı yazın.." })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                        @Html.ActionLink("Geri Dön", "Index", "Budget", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

