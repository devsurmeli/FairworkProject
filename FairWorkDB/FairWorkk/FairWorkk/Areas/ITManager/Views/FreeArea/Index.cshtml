@model List<FreeArea>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Boş Alan Bilgisi ve Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Boş alan Ücret Bilgileri</h3> <br />

            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: auto">Sıra No</th>
                            <th style="width: auto">İhtiyac Adı</th>
                            <th style="width: auto">Kullanım Miktarı Ve Fiyaı</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1.</td>
                            <td>Elektrik</td>
                            <td>
                                0-100KW    =  100$ <br />
                                100-200KW  =  200$ <br />
                                200-300KW  =  300$ <br />
                                300KW>     =  400$ <br />
                            </td>
                        </tr>
                        <tr>
                            <td>2.</td>
                            <td>Su</td>
                            <td>
                                0-100LT    =  10$ <br />
                                100-200LT  =  20$ <br />
                                200-300LT  =  30$ <br />
                                300LT>     =  40$ <br />
                            </td>
                        </tr>
                        <tr>
                            <td>3.</td>
                            <td>Atık Su</td>
                            <td>
                                0-100WLT    =  150$ <br />
                                100-200WLT  =  250$ <br />
                                200-300WLT  =  350$ <br />
                                300WLT>     =  450$ <br />
                            </td>
                        </tr>
                        <tr>
                            <td>4.</td>
                            <td>Basınçlı Hava</td>
                            <td>
                                0-100DB    =  50$  <br />
                                100-200DB  =  100$ <br />
                                200-300DB  =  150$ <br />
                                300DB>     =  200$ <br />
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Boş Alan Listesi</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Firma Bilgileri</th>
                            <th>Sözleşme Bilgileri</th>
                            <th>Elektrik İhtiyacı Var mı?</th>
                            <th>Miktarı</th>
                            <th>Fiyatı</th>
                            <th>Su İhtiyacı Var mı?</th>
                            <th>Miktarı</th>
                            <th>Fiyatı</th>
                            <th>Atık Su İhtiyacı Var mı?</th>
                            <th>Miktarı</th>
                            <th>Fiyatı</th>
                            <th>Basınlı Hava İhtiyacı Var mı?</th>
                            <th>Miktarı</th>
                            <th>Fiyatı</th>
                            <th>Toplam Fiyatı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Company.CompanyName</td>
                                <td>@item.ContractId</td>
                                <td>@item.Electric</td>
                                <td>@item.KWNeed</td>
                                <td>@item.KWPrice</td>
                                <td>@item.Water</td>
                                <td>@item.LTNeed</td>
                                <td>@item.LTPrice</td>
                                <td>@item.WasteWater</td>
                                <td>@item.WLTNeed</td>
                                <td>@item.WLTPrice</td>
                                <td>@item.CompressedAir</td>
                                <td>@item.AirNeed</td>
                                <td>@item.AirPrice</td>
                                <td>@item.TotalPrice</td>
                                <td>
                                    @Html.ActionLink("Detay", "Detail", new { id = item.ID }, new { @class = "btn btn-success" })<br />
                                    @Html.ActionLink("Ekle", "Add", "FreeArea", null, new { @class = "btn btn-info" })<br />
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-warning" })<br />
                                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

