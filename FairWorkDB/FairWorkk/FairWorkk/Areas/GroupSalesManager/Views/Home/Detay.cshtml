@model List<SalesPerson>
@{
    ViewBag.Title = "Detay";
    Layout = "~/Areas/GroupSalesManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Satış Personeli Ayrıntı";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-dark">
            @foreach (var item in Model)
            {
                <center><h5>Çalışan ID: <label style="color:darkred">@item.ID</label></h5></center><br />
                <center><h5>İlgilendiği Fuar: <label style="color:darkred">@item.Fair.FairName</label></h5></center><br />
                <center><h5>Adı-Soyadı :<label style="color:darkred">@item.FullName</label></h5></center><br />
                <center><h5>Telefonu :<label style="color:darkred">@item.Phone</label></h5></center><br />
                <center><h5>Email : <label style="color:darkred">@item.Email</label></h5></center><br />
                <center>
                    <h5>
                        @Html.ActionLink("Geri Dön", "Index", "Home", null, new { @class = "btn btn-secondary" })
                    </h5>
                </center>
            }
        </div>
    </div>
</div>

