@model List<Stand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ITManager/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Stand Listesi";
}

<div class="row">
    <div class="col-12">
        <div class="card card-gray-dark">
            <div class="card-header">
                <h3 class="card-title">Stand Bilgileri</h3>
            </div>
            <div class="card-body ">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th style="width:auto">Kodu</th>
                            <th style="width:auto">Genişligi</th>
                            <th style="width:auto">Boyu</th>
                            <th style="width:auto">Alanı</th>
                            <th style="width:auto">Salon Adı</th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Code</td>
                                <td>@item.Width</td>
                                <td>@item.Height</td>
                                <td>@item.Area</td>
                                <td>@item.Saloon.SalonName</td>
                                <td> @Html.ActionLink("Ekle", "Add", "Stand", null, new { @class = "btn btn-info" })</td>
                                <td>
                                    @Html.ActionLink("Güncelle", "Update", new { id = item.ID }, new { @class = "btn btn-warning" })
                                </td>
                                <td>
                                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

